@model ML.Cuenta
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Form</h1>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Cuenta", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                @if (Model ==null)
                {
                    
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.account)
                            @Html.TextBoxFor(model=>model.account, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">

                            @Html.LabelFor(model => model.balance)
                            @Html.TextBoxFor(model=>model.balance, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">

                            @Html.LabelFor(model => model.Owners)
                            @Html.TextBoxFor(model=>model.Owners, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-1">
                                <input type="submit" value="Guardar" class="btn btn-success" />
                            </div>
                            <div class="col-1">
                                @Html.ActionLink("Regresar","GetAll","Cuenta", htmlAttributes: new { @class = "btn btn-danger col-auto"})
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.LabelFor(model => model.account)
                            @Html.TextBoxFor(model=>model.account, new { @class = "form-control", @disabled="disabled"})
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">

                            @Html.LabelFor(model => model.balance)
                            @Html.TextBoxFor(model=>model.balance, new { @class = "form-control", @disabled="disabled" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">

                            @Html.LabelFor(model => model.Owners)
                            @Html.TextBoxFor(model=>model.Owners, new { @class = "form-control", @disabled="disabled" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">

                            <div class="col-1">
                                @Html.ActionLink("Regresar","GetAll","Cuenta", htmlAttributes: new { @class = "btn btn-danger col-auto"})
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>